{
	"name": "leux",
	"version": "0.3.2",
	"homepage": "https://leux.vercel.app/",
	"description": "React components library",
	"publishConfig": {
		"registry": "https://registry.npmjs.org"
	},
	"repository": {
		"type": "git",
		"url": "https://github.com/hiimlex/leux.git"
	},
	"engines": {
		"node": ">=16.14.0"
	},
	"scripts": {
		"build": "rollup -c",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage --collectCoverageFrom='./src/**'",
		"test:badges": "npm run test:coverage && npx jest-coverage-badges",
		"prepare": "npx husky install && npx husky add ./.husky/pre-commit 'npx lint-staged'"
	},
	"bugs": {
		"url": "https://github.com/hiimlex/leux/issues"
	},
	"keywords": [
		"react",
		"components",
		"ui",
		"library"
	],
	"author": "hiimlex",
	"license": "ISC",
	"devDependencies": {
		"@babel/core": "^7.18.13",
		"@babel/eslint-parser": "^7.19.1",
		"@babel/preset-env": "^7.18.10",
		"@babel/preset-react": "^7.18.6",
		"@babel/preset-typescript": "^7.18.6",
		"@rollup/plugin-commonjs": "^22.0.2",
		"@rollup/plugin-eslint": "^9.0.0",
		"@rollup/plugin-node-resolve": "^13.3.0",
		"@rollup/plugin-typescript": "^8.4.0",
		"@testing-library/jest-dom": "^5.16.5",
		"@testing-library/react": "^13.4.0",
		"@types/jest": "^29.0.0",
		"@types/react": "^18.0.18",
		"@typescript-eslint/eslint-plugin": "^5.39.0",
		"@typescript-eslint/parser": "^5.39.0",
		"babel-jest": "^29.0.2",
		"babel-loader": "^8.2.5",
		"css-loader": "^6.7.1",
		"eslint": "^8.25.0",
		"eslint-config-airbnb": "^19.0.4",
		"eslint-config-node": "^4.1.0",
		"eslint-config-prettier": "^8.5.0",
		"eslint-import-resolver-typescript": "^3.5.1",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"eslint-plugin-promise": "^6.0.1",
		"eslint-plugin-react": "^7.31.8",
		"eslint-plugin-react-hooks": "^4.3.0",
		"husky": "^8.0.1",
		"identity-obj-proxy": "^3.0.0",
		"jest": "^29.0.2",
		"jest-environment-jsdom": "^29.0.2",
		"lint-staged": "^13.0.3",
		"node-sass": "^9.0.0",
		"postcss-import": "^15.1.0",
		"postcss-nested": "^6.0.1",
		"postcss-simple-vars": "^7.0.1",
		"prettier": "^2.7.1",
		"react": "^18.2.0",
		"react-dom": "^18.2.0",
		"rollup": "^2.79.0",
		"rollup-plugin-dts": "^4.2.2",
		"rollup-plugin-includepaths": "^0.2.4",
		"rollup-plugin-peer-deps-external": "^2.2.4",
		"rollup-plugin-styles": "^4.0.0",
		"rollup-plugin-terser": "^7.0.2",
		"sass": "^1.54.8",
		"ts-node": "^10.9.1",
		"typescript": "^4.8.4",
		"webpack": "^5.74.0"
	},
	"peerDependencies": {
		"react": "^18.2.0"
	},
	"main": "dist/cjs/index.js",
	"module": "dist/esm/index.js",
	"files": [
		"dist"
	],
	"types": "dist/index.d.ts",
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"**/*.{js,jsx,ts,tsx}": [
			"eslint . --fix",
			"prettier --write ."
		],
		"**/*.{css,scss,md}": [
			"prettier --write ."
		],
		"**/*.spec.{jsx,tsx}": [
			"jest --bail --findRelatedTests"
		]
	}
}
